@{
    ViewData["Title"] = Localizer["Dashboard"];
}

<div class="container-fluid p-0">
    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3><strong>@Localizer["Music"]</strong> @Localizer["Tools"]</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Welcome to MusicTools"]</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        @Localizer["MusicTools provides a collection of essential tools for musicians and students. Explore our calculators and ear training tests to enhance your musical skills."]
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-4 d-flex">
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Major Calculator"]</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>@Localizer["Calculate major scales and chords based on a root note."]</p>
                    <div class="mt-auto">
                        <a asp-action="Major" class="btn btn-primary">@Localizer["Open"]</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 d-flex">
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Minor Calculator"]</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>@Localizer["Calculate minor scales and chords (natural, harmonic, and melodic)."]</p>
                    <div class="mt-auto">
                        <a asp-action="Minor" class="btn btn-primary">@Localizer["Open"]</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 d-flex">
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Interval Calculator"]</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>@Localizer["Calculate musical intervals between two notes."]</p>
                    <div class="mt-auto">
                        <a asp-action="Interval" class="btn btn-primary">@Localizer["Open"]</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 d-flex">
            <div class="card flex-fill border-info">
                <div class="card-header">
                    <h5 class="card-title mb-0 text-info">@Localizer["Interval Test"]</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>@Localizer["Test your ear by identifying musical intervals."]</p>
                    <div class="mt-auto">
                        <a asp-action="IntervalExam" class="btn btn-info text-white">@Localizer["Start Test"]</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 d-flex">
            <div class="card flex-fill border-info">
                <div class="card-header">
                    <h5 class="card-title mb-0 text-info">@Localizer["Melody Memory Test"]</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>@Localizer["Challenge your musical memory by repeating melodies."]</p>
                    <div class="mt-auto">
                        <a asp-action="MelodyMemory" class="btn btn-info text-white">@Localizer["Start Test"]</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 d-flex">
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Metronome"]</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>@Localizer["A simple and reliable metronome to help you keep time."]</p>
                    <div class="mt-auto">
                        <a asp-action="Metronome" class="btn btn-primary">@Localizer["Open"]</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 d-flex">
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Tuner"]</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>@Localizer["A professional tuner to help you tune your instruments."]</p>
                    <div class="mt-auto">
                        <a asp-action="Tuner" class="btn btn-primary">@Localizer["Open"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>